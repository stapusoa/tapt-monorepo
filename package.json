{
  "name": "Koya",
  "version": "1.0.0",
  "description": "Koya is a digital marketplace built to spark creativity and entrepreneurship — starting with young dreamers. Inspired by the simple idea of a neighborhood lemonade stand, Koya gives anyone — especially youth — the tools and space to turn their hobbies, crafts, and passions into real businesses.",
  "main": "index.js",
  "private": true,
  "packageManager": "pnpm@8.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "deploy:cms": "git subtree push --prefix=apps/cms cms main",
    "prepare": "if [ ! \"$CI\" ]; then husky install; fi",
    "build": "pnpm turbo run build",
    "dev:backend": "pnpm --filter backend dev",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "dev:web": "pnpm --filter web dev",
    "build:web": "pnpm --filter web build",
    "start:web": "pnpm --filter web preview",
    "release": "semantic-release",
    "lint": "pnpm eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "pnpm eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "test": "vitest run",
    "check": "pnpm lint && pnpm test && pnpm build"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "koya",
    "lemonade stand",
    "marketplace in Utah",
    "marketplace Utah",
    "entrepreneur Utah",
    "entrepreneurs Utah",
    "digital marketplace",
    "market",
    "marketplace",
    "entrepreneurs",
    "kids",
    "children",
    "kids entrepreneur",
    "kids entrepreneurs",
    "children entrepreneur",
    "children entrepreneurs",
    "entrepreneurs in Utah",
