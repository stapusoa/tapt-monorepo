{
  "name": "tapt-monorepo",
  "version": "1.0.0",
  "description": "Tapt Designs is focused on user-centered digital solutions. Based in Utah, I specialize in web and mobile app development, crafting seamless experiences that engage and inspire. Combining creativity and technical expertise to deliver innovative products tailored to your needs.",
  "main": "index.js",
  "private": true,
  "packageManager": "pnpm@8.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "deploy:cms": "git subtree push --prefix=apps/cms cms main",
    "prepare": "if [ ! \"$CI\" ]; then husky install; fi",
    "build": "pnpm turbo run build",
    "dev:backend": "pnpm --filter backend dev",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "dev:web": "pnpm --filter web dev",
    "build:web": "pnpm --filter web build",
    "start:web": "pnpm --filter web preview",
    "release": "semantic-release",
    "lint": "pnpm eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "pnpm eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "test": "vitest run",
    "check": "pnpm lint && pnpm test && pnpm build"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "tapt",
    "tapt designs",
    "Sara Tapusoa",
    "Tippytapster",
    "designer Utah",
    "entrepreneurs Utah",
    "digital design",
    "marketing Utah",
    "marketplace",
    "entrepreneurs",
    "small business Utah",
    "designers in Utah",
    "UX designer Utah",
    "Utah entrepreneur",
    "Utah entrepreneurs",
    "best marketplace in Utah",
    "promotional products Utah",
    "web development Utah",
    "app development Utah",
    "mobile app development Utah",
    "product design Utah",
    "design systems Utah",
    "brand design Utah",
    "graphic design Utah"
  ],
  "author": "Sara Tapusoa",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-storybook": "^9.1.1",
    "husky": "^8.0.0",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.4",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@google-cloud/recaptcha-enterprise": "^6.3.0",
    "@sanity/client": "^7.11.2",
    "@sanity/image-url": "^1.2.0",
    "@storybook/react": "^9.1.7",
    "axios": "^1.12.2",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^11.9.0",
    "framer-motion": "^12.23.19",
    "launchdarkly-react-client-sdk": "^3.8.1",
    "typescript": "^5.9.2"
  }
}
